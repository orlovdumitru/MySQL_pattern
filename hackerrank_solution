DECLARE @len int
DECLARE @str varchar(1)
SELECT @len = 0
SELECT @str = '*'
WHILE @len <= 20
    BEGIN
    PRINT replicate(CONCAT(@str, ' '), @len)
    SET @len = @len + 1
    END
    
